<Window x:Class="Watch_Precision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Watch_Precision"
        mc:Ignorable="d"
        Title="WatchPrecision" Height="500" Width="900" Background="AliceBlue">
    <Grid HorizontalAlignment="Left" Width="900">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Margin="20,20,0,0" Width="auto">
            <WrapPanel>
                <TextBlock Text="Time: "/>
                <TextBlock Name="pcTime" Margin="5,0,0,0" Text="00:00:00" FontWeight="Bold" HorizontalAlignment="Right"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Watch time: "/>
                <TextBlock Name="watchTime" Margin="5,0,0,0" FontWeight="Bold" Text="{Binding Path=Text, ElementName=pcTime}"/>
                <Button Name="timeUpButton" Margin="10,0,10,0"/>     <!-- button should look like an arrow UP/DOWN and change only minutes (14:57:03 -> 14:58:03) -->
                <Button Name="timeDownButton"/>
            </WrapPanel>
            <Button Width="100" Margin="0,10,0,5" Content="Measure watch" BorderThickness="2" BorderBrush="Blue" Background="AliceBlue" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
            <TextBlock Name="measureInfoTB" TextWrapping="WrapWithOverflow" Text="Click when seconds hand is on :00" Foreground="Blue" FontSize="10" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
